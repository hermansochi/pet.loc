---
- name: Log into private registry
  hosts: site
  remote_user: user
  become: yes
  become_user: deploy
  varn_prompt:
    - name: registry
      prompt: "Registry"
      private: no
    - name: username
      prompt: "Username"
      private: no
    - name: password
      prompt: "Password"
  tasks:
    - name: Log into private registry
      shell: "docker login -u '{{ username }}' -p '{{ password }}' {{ registry }}"
